@model List<Contact>
@{
    ViewData["Title"] = "My Contacts";
}

<div class="mb-2"><a asp-controller="Contact" asp-action="Add">Add New Contact</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contacts in Model)
        {
            <tr>
                <td>@contacts.Name</td>
                <td>@contacts.PhoneNumber</td>
                <td>@contacts.Address</td>
                <td>@contacts.Note</td>
                <td><a asp-controller="Contact" asp-action="Delete" asp-route-id="@contacts.ContactId" asp-route-slug="@contacts.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
